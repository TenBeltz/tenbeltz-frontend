---
import { ReactComponent as PhoneIcon } from '/public/images/svg/phone.svg';
import { ReactComponent as MailIcon } from '/public/images/svg/envelope.svg';
import { Image } from 'astro:assets';
import backgroundGradientPC from '/public/images/img/contact-gradient-background-pc.png';
import backgroundGradientMobile from '/public/images/img/contact-gradient-background-mobile.png';

export const contactInfo = {
  phone: '+34 640 52 08 19',
  email: 'hello@tenbeltz.com',
}
---

<section id="contact-section" class="relative text-white">
  <div class="flex flex-col max-w-screen-xl mx-auto lg:flex-row">
    <div class="px-4 py-20 lg:flex-1 lg:px-16">
      <div class="flex flex-col gap-y-8">
        <div class="flex flex-col max-w-[21rem] gap-y-6">
          <h3 class="text-4xl font-bold">
            Let's talk about 
            <span class="bg-gradient-to-r from-[#9238D6] to-[#11B2FC] bg-clip-text text-transparent">your project</span>
          </h3>
          <p class="text-lg text-slate-300">Reach out to us for personalized solutions. Our team is ready to assist you with your project needs. Let's create something amazing together.</p>
        </div>
        <div>
          <ul class="flex flex-col gap-y-4 text-slate-300">
            <li class="flex items-center gap-x-2">
              <MailIcon strokeWidth="1.5" className="size-6" stroke="currentColor" />
              <a href={`mailto:${contactInfo.email}`} class="text-xs">{contactInfo.email}</a>
            </li>
            <li class="flex items-center gap-x-2">
              <PhoneIcon strokeWidth="1.5" className="size-6" stroke="currentColor" />
              <a href={`tel:${contactInfo.phone}`} class="text-xs">{contactInfo.phone}</a>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <div class="px-4 py-20 lg:border-x lg:border-berry-blackmail md:flex-1 lg:px-16 bg-gradient-to-r from-[#561B834D] to-[#1A00764D]">
      <form method="post" class="flex flex-col gap-y-6">
        <div class="grid grid-cols-2 gap-x-14 gap-y-8">
          <div class="flex flex-col col-span-2 gap-y-3 md:col-span-1">
            <label for="firstname" class="font-semibold">First name</label>
            <input id="firstname" type="text" class="px-3 py-2 text-white transition-colors border rounded-md border-berry-blackmail bg-berry-blackmail focus:border-petal-plush focus-visible:outline-none">
          </div>
          <div class="flex flex-col col-span-2 gap-y-3 md:col-span-1">
            <label for="lastname" class="font-semibold">Last name</label>
            <input id="lastname" type="text" class="px-3 py-2 text-white border rounded-md border-berry-blackmail bg-berry-blackmail focus:border-petal-plush focus-visible:outline-none">
          </div>
          <div class="flex flex-col col-span-2 gap-y-3">
            <label for="email" class="font-semibold">Email</label>
            <input id="email" type="email" class="px-3 py-2 text-white border rounded-md border-berry-blackmail bg-berry-blackmail focus:border-petal-plush focus-visible:outline-none">
          </div>
          <div class="flex flex-col col-span-2 gap-y-3">
            <label for="phone" class="font-semibold">Phone number</label>
            <input id="phone" type="text" class="px-3 py-2 text-white border rounded-md border-berry-blackmail bg-berry-blackmail focus:border-petal-plush focus-visible:outline-none">
          </div>
          <div class="flex flex-col col-span-2 gap-y-3">
            <label for="message" class="font-semibold">Message</label>
            <textarea id="message" rows="3" class="px-3 py-2 text-white border rounded-md resize-none border-berry-blackmail bg-berry-blackmail focus:border-petal-plush focus-visible:outline-none"></textarea>
          </div>
        </div>
        <button class="self-end px-4 py-2 font-semibold leading-none border rounded-md border-pheromone-purple text-pheromone-purple w-fit bg-pheromone-purple/20">Send message</button>
      </form>
    </div>
  </div>
  <Image src={backgroundGradientPC} alt="" aria-hidden="true" loading="eager" fetchpriority="high" class="absolute inset-0 hidden object-cover w-full h-full -z-50 lg:block" />
  <Image src={backgroundGradientMobile} alt="" aria-hidden="true" loading="eager" fetchpriority="high" class="absolute inset-0 object-cover w-full h-full -z-50 lg:hidden" />
</section>
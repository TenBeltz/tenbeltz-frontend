---
import SEO from "@/components/SEO.astro"

interface Props {
	title: string
	description: string
	canonical?: string
}

const { title, description, canonical } = Astro.props
---

<!doctype html>
<html lang="en">
	<head>
		<SEO
			title={title}
			canonical={canonical}
			description={description}
		/>
	</head>
	<body class="flex flex-col min-h-screen overflow-x-hidden bg-obsidian-shard">
		<slot />
	</body>
</html>
<style is:global>
</style>

---
import Banner from '@/components/Banner.astro';
import Divider from '@/components/Divider.astro';
import Header from '@/components/Header.astro';
import Hero from '@/components/Hero.astro';
import Offer from '@/components/Offer.astro';
import Footer from '@/components/Footer.astro';
import Layout from '@/layouts/Layout.astro';
import Contact from '@/components/Contact.astro';
import FAQ from '@/components/FAQ.astro';
import About from '@/components/About.astro';

import { Picture } from 'astro:assets';
import backgroundGradientPC from '/public/images/img/about-gradient-background-pc.png';
import backgroundGradientMobile from '/public/images/img/about-gradient-background-mobile.png';
---

<Layout	
	title="TenBeltz | IA en producto lista para producción"
	description="Ayudamos a empresas de software a implementar IA fiable y escalable con evaluación continua, observabilidad y control de costes."
	canonical="https://tenbeltz.com"
>
	<Header />
	<main class="relative z-10 flex flex-col flex-1 overflow-x-hidden">
		<Hero 
			title="IA para tu SaaS"
			highlight="escalable" 
			subtitle="Ayudamos a empresas de software que quieren añadir IA a su SaaS pero no saben por dónde empezar ni cómo llevarla a producción de forma escalable y con costes controlados." 
			buttonHref="#contact-section" 
			buttonText="Solicitar diagnóstico" 
			animateHighlight={true}
			showCursor={true}
			stackHighlight={true}
		/>
	
		<Divider text="De prototipo a producción con evaluación continua, observabilidad y costes controlados." />
		<Offer />
		<Banner 
			title="Checklist IA lista para producción"
			subtitle="Evalúa fiabilidad, coste, privacidad y escalabilidad antes de lanzar."
			paragraph="Te ayudamos a pasar de idea a feature estable sin sorpresas."
			buttonText="Pedir checklist"
			buttonHref="#contact-section"
		/>
		<div class="relative bg-grid">
			<About />
			<FAQ />

			<Picture src={backgroundGradientPC} alt="" aria-hidden="true" loading="eager" fetchpriority="high" class="absolute inset-0 hidden object-cover w-full h-full -z-50 lg:block" />
			<Picture src={backgroundGradientMobile} alt="" aria-hidden="true" loading="eager" fetchpriority="high" class="absolute inset-0 object-cover w-full h-full -z-50 lg:hidden" />
		</div>
		<Divider text="Tu próxima feature de IA empieza con una conversación." />

		<Contact />
	</main>
	<Footer />
</Layout>

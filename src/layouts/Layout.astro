---
import "../styles/global.css";
import SEO from "@/components/SEO.astro"

interface Props {
	title: string
	description: string
	canonical?: string
}

const { title, description, canonical } = Astro.props
---

<!doctype html>
<html lang="en">
	<head>
		<SEO
			title={title}
			canonical={canonical}
			description={description}
		/>
		<script is:inline src="https://analytics.ahrefs.com/analytics.js" data-key="+xbnrKRX+hWN03i9D86kJg" async></script>
	</head>
	<body class="flex flex-col min-h-screen overflow-x-hidden bg-obsidian-shard">
		<slot />
	</body>
</html>
<style is:global>
	html {
		scroll-behavior: smooth;
	}
</style>

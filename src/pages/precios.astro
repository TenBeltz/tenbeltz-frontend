---
import Layout from '@/layouts/Layout.astro';
import Header from '@/components/Header.astro';
import Hero from '@/components/Hero.astro';
import Footer from '@/components/Footer.astro';
import Contact from '@/components/Contact.astro';
import Banner from '@/components/Banner.astro';
import { ScrollReveal } from '@/components/ScrollReveal';

const orienterSteps = [
  {
    title: '1. Solo tengo una idea',
    description: 'Aterriza el caso de uso y decide si merece inversión.',
    recommendation: 'Workshop o Auditoría Lite',
    href: '#primer-paso',
  },
  {
    title: '2. Tengo un caso de uso, pero no sé si escalará',
    description: 'Define fiabilidad, costes y riesgos antes de construir.',
    recommendation: 'Auditoría Estándar o Pro',
    href: '#auditorias',
  },
  {
    title: '3. Quiero construir una feature',
    description: 'Valida rápido con números reales.',
    recommendation: 'Prototype Sprint',
    href: '#sprints',
  },
];

const tripwirePlans = [
  {
    title: 'Workshop en directo',
    tag: '2h',
    price: '149€',
    description: 'Diseña una feature de IA fiable en tu SaaS.',
    bullets: ['Plantilla de arquitectura', 'Checklist lista para producción', 'Q&A en vivo'],
    ctaLabel: 'Reservar workshop',
    ctaHref: 'https://calendly.com/tenbeltz/ia-workshop',
  },
  {
    title: 'Curso corto grabado',
    tag: '90 min',
    price: '99€',
    description: 'De prototipo a producción: lo mínimo que debes medir.',
    bullets: ['Marco de métricas', 'Errores comunes', 'Plantillas listas para usar'],
    ctaLabel: 'Comprar curso',
    ctaHref: 'https://checkout.tenbeltz.com/curso-ia',
  },
];

const auditPlans = [
  {
    title: 'Auditoría Lite',
    tag: '90 min',
    price: '1.500€',
    bullets: ['Riesgos priorizados', 'Recomendaciones claras en 1 página', 'Decisión de siguiente paso'],
    ctaLabel: 'Solicitar auditoría',
    ctaHref: '/#contact-section',
  },
  {
    title: 'Auditoría Estándar',
    tag: '1 semana',
    price: '3.500€',
    bullets: ['Arquitectura recomendada', 'Riesgos técnicos y de datos', 'Estimación de costes en producción', 'Informe 8-12 páginas'],
    ctaLabel: 'Solicitar auditoría',
    ctaHref: '/#contact-section',
  },
  {
    title: 'Auditoría Pro',
    tag: '2 semanas',
    price: '5.000€',
    bullets: ['Diseño de evals de fiabilidad', 'Plan de observabilidad', 'Modelo de amenazas básico', 'Costes estimados por escenario'],
    ctaLabel: 'Solicitar auditoría',
    ctaHref: '/#contact-section',
  },
];

const sprintPlans = [
  {
    title: 'Sprint S',
    tag: '10 días',
    price: '4.500€',
    bullets: ['1 flujo', '1 dataset', '1 métrica de éxito', 'Demo interna'],
    ctaLabel: 'Quiero este sprint',
    ctaHref: '/#contact-section',
  },
  {
    title: 'Sprint M',
    tag: '2 semanas',
    price: '7.000€',
    bullets: ['2 flujos', 'Evaluación básica', 'Logging / tracing mínimo', 'README de despliegue'],
    ctaLabel: 'Quiero este sprint',
    ctaHref: '/#contact-section',
  },
  {
    title: 'Sprint L',
    tag: '2 semanas',
    price: '10.000€',
    bullets: ['3 flujos', 'Evals automáticas', 'Guardrails', 'Prueba con usuarios', 'Plan de producción'],
    ctaLabel: 'Quiero este sprint',
    ctaHref: '/#contact-section',
  },
];
---

<Layout
  title="TenBeltz | Precios claros para IA en producción"
  description="Precios por fases para llevar IA a producción sin sorpresas, con fiabilidad y control de costes."
  canonical="https://tenbeltz.com/precios"
>
  <Header />
  <main class="relative z-10 flex flex-col flex-1 overflow-x-hidden">
    <Hero
      title="Precios claros para llevar IA a producción"
      highlight="sin sorpresas"
      subtitle="Elige el punto de entrada adecuado. Si dudas, te decimos cuál necesitas en menos de 48h."
      buttonHref="#contact-section"
      buttonText="Recomiéndame el mejor paquete"
      animateHighlight={false}
      showCursor={false}
      stackHighlight={true}
    />

    <section class="relative text-white bg-grid">
      <div class="flex flex-col items-center justify-center max-w-screen-xl px-4 py-20 mx-auto lg:px-16 lg:py-24 gap-y-10">
        <ScrollReveal client:load>
          <div class="text-center">
            <h2 class="text-4xl font-bold">¿Dónde estás ahora?</h2>
          </div>
        </ScrollReveal>
        <div class="grid w-full grid-cols-1 gap-8 lg:grid-cols-3">
          {orienterSteps.map((step, index) => (
            <ScrollReveal client:load delay={index * 150}>
              <div class="flex flex-col h-full px-6 py-7 transition-all rounded-lg bg-[#0B0122CC]/80 gap-y-4 border border-pheromone-purple/30">
                <h3 class="text-xl font-semibold">{step.title}</h3>
                <p class="text-slate-300">{step.description}</p>
                <a href={step.href} class="mt-auto text-sm font-semibold text-pheromone-purple hover:text-pheromone-light">Recomendación: {step.recommendation}</a>
              </div>
            </ScrollReveal>
          ))}
        </div>
      </div>
    </section>

    <section id="primer-paso" class="relative text-white bg-grid">
      <div class="flex flex-col items-center justify-center max-w-screen-xl px-4 py-20 mx-auto lg:px-16 lg:py-24 gap-y-10">
        <ScrollReveal client:load>
          <div class="text-center">
            <h2 class="text-4xl font-bold">Primer paso (opciones rápidas)</h2>
            <p class="mt-3 text-slate-300">Opciones rápidas para aterrizar el caso de uso y decidir el siguiente paso.</p>
          </div>
        </ScrollReveal>
        <div class="grid w-full grid-cols-1 gap-8 lg:grid-cols-2">
          {tripwirePlans.map((plan, index) => (
            <ScrollReveal client:load delay={index * 150}>
              <div class="flex flex-col h-full px-6 py-7 transition-all backdrop-blur-[1px] rounded-lg bg-[#0B0122CC]/80 gap-y-5 border border-pheromone-purple/30 hover:border-blueberry-glaze hover:bg-gradient-to-bl from-[#340076]/80 hover:shadow-[0px_0px_20px_0px_rgba(117,4,205,1.00)] to-[#1D0043]/90">
                <div class="flex items-center justify-between">
                  <h3 class="text-2xl font-semibold">{plan.title}</h3>
                  <span class="px-3 py-1 text-xs font-semibold border rounded-full border-pheromone-purple/50 text-pheromone-purple">{plan.tag}</span>
                </div>
                <p class="text-slate-300">{plan.description}</p>
                <p class="text-3xl font-bold text-white">{plan.price}</p>
                <p class="text-sm font-semibold text-slate-400">Incluye:</p>
                <ul class="flex flex-col gap-2 text-sm text-slate-300">
                  {plan.bullets.map(item => (
                    <li>• {item}</li>
                  ))}
                </ul>
                <a href={plan.ctaHref} class="w-full mt-auto text-center btn bg-pheromone-purple hover:bg-sapphire-siren text-white">
                  {plan.ctaLabel}
                </a>
              </div>
            </ScrollReveal>
          ))}
        </div>
      </div>
    </section>

    <section id="auditorias" class="relative text-white bg-grid">
      <div class="flex flex-col items-center justify-center max-w-screen-xl px-4 py-20 mx-auto lg:px-16 lg:py-24 gap-y-10">
        <ScrollReveal client:load>
          <div class="text-center">
            <h2 class="text-4xl font-bold">Auditorías para decidir con datos</h2>
            <p class="mt-3 text-slate-300">Diagnóstico con entregables claros: riesgos, métricas, costes y hoja de ruta.</p>
          </div>
        </ScrollReveal>
        <div class="grid w-full grid-cols-1 gap-8 lg:grid-cols-3">
          {auditPlans.map((plan, index) => (
            <ScrollReveal client:load delay={index * 150}>
              <div class="flex flex-col h-full px-6 py-7 transition-all backdrop-blur-[1px] rounded-lg bg-[#0B0122CC]/80 gap-y-5 border border-pheromone-purple/30 hover:border-blueberry-glaze hover:bg-gradient-to-bl from-[#340076]/80 hover:shadow-[0px_0px_20px_0px_rgba(117,4,205,1.00)] to-[#1D0043]/90">
                <div class="flex items-center justify-between">
                  <h3 class="text-2xl font-semibold">{plan.title}</h3>
                  <span class="px-3 py-1 text-xs font-semibold border rounded-full border-pheromone-purple/50 text-pheromone-purple">{plan.tag}</span>
                </div>
                <p class="text-3xl font-bold text-white">{plan.price}</p>
                <p class="text-sm font-semibold text-slate-400">Resultado:</p>
                <ul class="flex flex-col gap-2 text-sm text-slate-300">
                  {plan.bullets.map(item => (
                    <li>• {item}</li>
                  ))}
                </ul>
                <a href={plan.ctaHref} class="w-full mt-auto text-center btn bg-pheromone-purple hover:bg-sapphire-siren text-white">
                  {plan.ctaLabel}
                </a>
              </div>
            </ScrollReveal>
          ))}
        </div>
      </div>
    </section>

    <section id="sprints" class="relative text-white bg-grid">
      <div class="flex flex-col items-center justify-center max-w-screen-xl px-4 py-20 mx-auto lg:px-16 lg:py-24 gap-y-10">
        <ScrollReveal client:load>
          <div class="text-center">
            <h2 class="text-4xl font-bold">Prototype Sprints (precio cerrado)</h2>
            <p class="mt-3 text-slate-300">Sprints con precio cerrado para validar rápido antes de escalar.</p>
          </div>
        </ScrollReveal>
        <div class="grid w-full grid-cols-1 gap-8 lg:grid-cols-3">
          {sprintPlans.map((plan, index) => (
            <ScrollReveal client:load delay={index * 150}>
              <div class="flex flex-col h-full px-6 py-7 transition-all backdrop-blur-[1px] rounded-lg bg-[#0B0122CC]/80 gap-y-5 border border-pheromone-purple/30 hover:border-blueberry-glaze hover:bg-gradient-to-bl from-[#340076]/80 hover:shadow-[0px_0px_20px_0px_rgba(117,4,205,1.00)] to-[#1D0043]/90">
                <div class="flex items-center justify-between">
                  <h3 class="text-2xl font-semibold">{plan.title}</h3>
                  <span class="px-3 py-1 text-xs font-semibold border rounded-full border-pheromone-purple/50 text-pheromone-purple">{plan.tag}</span>
                </div>
                <p class="text-3xl font-bold text-white">{plan.price}</p>
                <ul class="flex flex-col gap-2 text-sm text-slate-300">
                  {plan.bullets.map(item => (
                    <li>• {item}</li>
                  ))}
                </ul>
                <a href={plan.ctaHref} class="w-full mt-auto text-center btn bg-pheromone-purple hover:bg-sapphire-siren text-white">
                  {plan.ctaLabel}
                </a>
              </div>
            </ScrollReveal>
          ))}
        </div>
      </div>
    </section>

    <Banner
      title="¿No sabes por dónde empezar?"
      paragraph="Cuéntanos tu contexto y te diremos en menos de 48h cuál es el mejor punto de entrada para tu caso."
      buttonText="Hablemos de tu caso"
      buttonHref="#contact-section"
    />
    <Contact />
  </main>
  <Footer />
</Layout>

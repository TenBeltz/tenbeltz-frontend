---
import Layout from '@/layouts/Layout.astro';
import Header from '@/components/Header.astro';
import Hero from '@/components/Hero.astro';
import Footer from '@/components/Footer.astro';
import Divider from '@/components/Divider.astro';
import ServicesSection from '@/components/ServicesSection.astro';

const hideServices = true;

if (hideServices) {
	return Astro.redirect('/');
}
---

<Layout	
	title="TenBeltz | Servicios"
	description="Descubre cómo TenBeltz ayuda a empresas de software a integrar IA fiable y escalable."
	canonical="https://tenbeltz.com/services"
>
	<Header />
	<main class="z-10 flex flex-col flex-1 overflow-x-hidden">
		<Hero 
			title="Lo que hacemos"
			highlight="contigo"
			subtitle="Creamos soluciones que encajan con tu producto para que avances con claridad y velocidad." 
			buttonHref="/#contact-section" 
			buttonText="Convirtamos ideas en resultados" 
			animateHighlight={false}
			showCursor={false}
		/>
		<Divider text="Construimos tecnología que hace tu día a día más simple y escalable." />
		<ServicesSection />
	</main>
	<Footer />
</Layout>
